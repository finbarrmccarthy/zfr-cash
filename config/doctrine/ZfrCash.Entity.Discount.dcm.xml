<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="ZfrCash\Entity\Discount" table="cash_discounts" read-only="true">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <many-to-one field="customer" target-entity="ZfrCash\Entity\CustomerInterface" inversed-by="discount">
            <join-column on-delete="CASCADE" />
        </many-to-one>

        <embedded name="coupon" class="ZfrCash\Entity\Coupon" />
        <field name="startedAt" column="started_at" type="datetime" />
        <field name="endAt" column="end_at" type="datetime" nullable="true" />

        <one-to-one field="subscription" target-entity="ZfrCash\Entity\Subscription" inversed-by="discount">
            <join-column on-delete="CASCADE" />
        </one-to-one>
    </entity>
</doctrine-mapping>
